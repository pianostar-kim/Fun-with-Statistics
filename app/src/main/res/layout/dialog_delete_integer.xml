<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/dialogEnterIntInstructions2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Enter the integer you would like to delete. The first occurrence of the integer you enter will get deleted from the array."
        android:textSize="16sp" />

    <EditText
        android:id="@+id/dialogEdtTxtDeleteInt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogEnterIntInstructions2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter the integer here."
        android:inputType="numberSigned" />

</RelativeLayout>